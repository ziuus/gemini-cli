{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "bash",
          "args": true
        },
        {
          "name": "zsh",
          "cmd": "zsh",
          "args": true
        },
        {
          "name": "gemini",
          "cmd": "gemini",
          "args": true
        }
      ]
    },
    "shell:allow-open",
    "shell:allow-stdin-write"
  ]
}